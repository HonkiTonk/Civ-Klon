project Stream is

   for Source_Dirs use ("src/**");
   for Object_Dir use "obj";
   for Main use ("Start.adb");

   package Naming is
      for Casing use "MixedCase";
   end Naming;

   package Compiler is
      for Switches ("ada") use ("-gnatVa", "-gnatw.ha", "-gnatyAOekp", "-g", "-gnatW8", "-gnatf", "-gnat12", "-fstack-check", "-gnato");
   end Compiler;

   package Builder is
      for Switches ("ada") use ("-k", "-j4", "-s");
   end Builder;

end Stream;

